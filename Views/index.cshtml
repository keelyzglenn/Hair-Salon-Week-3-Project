@{
  Layout="Shared/_Layout.cshtml";
}


<h1>Hair Salon</h1>

@{
  Layout="Shared/_Layout.cshtml";
}

@if (@Model.Count == 0)
{
  <p>No Stylist have been added yet!</p>
}
else
{
  <h1>Here are all of the Stylists:</h1>
  <ul>
    @foreach (var stylist in Model)
    {
      <li><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a> |  <a href="/stylist/edit/@stylist.GetId()">Edit</a>  | <a href="/stylist/delete/@stylist.GetId()">Delete</a></li>
    }
  </ul>
  <form action="/stylists/delete" method="post">
    <button type="submit">Clear all stylists</button>
  </form>
}

<p><a href="/stylists/new">Add a new stylist</a></p>

<p><a href="/clients">View clients</a></p>
