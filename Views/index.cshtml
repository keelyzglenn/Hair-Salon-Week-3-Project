@{
    Layout="Shared/_Layout.cshtml";
}


@if (@Model.Count == 0)
{
    <p>No Stylist have been added yet!</p>
}
else
{
    <h1>Here are all of the Stylists:</h1>
    <ul>
    @foreach (var stylist in Model)
    {
        <h3><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a> |  <a href="/stylist/edit/@stylist.GetId()">Edit</a>  | <a href="/stylist/delete/@stylist.GetId()">Delete</a></h3>
    }
    </ul>
}

<h4><a href="/stylists/new">Add a new stylist</a></h4>

