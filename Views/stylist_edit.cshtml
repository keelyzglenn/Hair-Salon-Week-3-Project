
@{
  Layout="Shared/_Layout.cshtml";
}


<h1>Cuisines</h1>
<hr />
<h2>Edit stylist: @Model.GetName()</h2>
<form action="/stylist/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="stylist-id" type="hidden" value="@Model.GetId()">
  <label for="stylist-name">Stylist Name</label>
  <input id="stylist-name" name="stylist-name" type="text">
  <button type="submit">Submit</button>
</form>
<h5><a href="/">Return home</a></h5>


<h2>Are you sure you want to delete this stylist and all of its clients?</h2>
<h4>@Model.GetName()</h4>
<form action="/stylist/delete/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit">Delete</button>
</form>
<h5><a href="/">Back home</a></h5>
