@{
  Layout="Shared/_Layout.cshtml";
}

<h1>Client</h1>
<hr />
<h2>Edit client: @Model.GetName()</h2>
<form action="/client/edit/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <input name="client-id" type="hidden" value="@Model.GetId()">
  <label for="client-name">Client name</label>
  <input id="client-name" name="client-name" type="text">
  <button type="submit">Submit</button>
</form>


<h2>Are you sure you want to delete this client?</h2>
<h4>@Model.GetName()</h4>
<form action="/client/delete/@Model.GetId()" method="post">
  <input type="hidden" name="_method" value="DELETE">
  <button type="submit">Delete</button>
</form>
<p><a href="/">Back home</a></p>


